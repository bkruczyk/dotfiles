Xft.lcdfilter: lcddefault
Xft.autohint: 0
Xft.dpi: 96
Xft.rgba: rgb
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

URxvt*termName: xterm-256color

! do not scroll with output
URxvt.scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

! scroll in less etc.
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! font
URxvt.font: xft:DejaVu\ Sans\ Mono:size=9
URxvt.boldFont: xft:DejaVu\ Sans\ Mono:size=9
URxvt.letterSpace: -1

! 
! perls
URxvt.perl-ext-common: default

!  turn off scrollbar
URxvt.scrollBar: false

! padding
URxvt.internalBorder: 8

! scroll buffer size
URxvt.saveLines: 512

*.foreground:   #F6F6F6
*.background:   #252525
*.cursorColor:  #DADADA

! black
*.color0:       #252525
*.color8:       #252525

! red
*.color1:       #6495ed
*.color9:       #6495ed

! green
*.color2:       #616161
*.color10:      #616161

! yellow
*.color3:       #C3C3C3
*.color11:      #C3C3C3

! blue
*.color4:       #9E9E9E
*.color12:      #9E9E9E

! magenta
*.color5:       #DADADA
*.color13:      #DADADA

! cyan
*.color6:       #E8E8E8
*.color14:      #E8E8E8

! white
*.color7:       #F6F6F6
*.color15:      #F6F6F6
